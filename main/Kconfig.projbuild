menu "Battery ADC configuration"
    config BATTERY_ADC_PIN
        int "Battery ADC pin"
        default 5
        range 0 48
        # "电池电压检测ADC引脚,注意量程"

    config BATTERY_ADC_ATTEN
        int "Battery ADC attenuation"
        default 2
        range 0 3
        # "ADC衰减比例，0-3"
        # "• 当ATTEN=0，有效测量范围为0~850mV时，总误差为±5mV。"
        # "• 当ATTEN=1，有效测量范围为0~1100mV时，总误差为±6mV。"
        # "• 当ATTEN=2，有效测量范围为0~1600mV时，总误差为±10mV。"
        # "• 当ATTEN=3，有效测量范围为0~2900mV时，总误差为±50mV。"
endmenu