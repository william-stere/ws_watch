menu "screen configuration"

    menu "touch panel configuration"
        config TP_INT
            int "touch int pin"
            default 10
            range 0 48
            # "触摸中断引脚，触摸屏中断引脚，当有触摸事件发生时，此引脚会触发中断信号。"
        
        config TP_RST
            int "touch reset pin"
            default 11
            range 0 48
            # "触摸复位引脚，触摸屏控制器复位引脚，低电平有效。用于在初始化时复位触摸控制器，确保正常工作。"
        
        config TP_SDA
            int "touch IIC SDA pin"
            default 12
            range 0 48
            # "触摸IIC数据引脚, 触摸屏I2C总线数据线，用于与触摸控制器通信。"
        
        config TP_SCL
            int "touch IIC SCL pin"
            default 13
            range 0 48
            # "触摸IIC时钟引脚,触摸屏I2C总线时钟线，用于与触摸控制器通信。"
    endmenu

    menu "LCD configuration"
        config LCD_RST
            int "LCD reset pin"
            default 14
            range 0 48
            # "LCD复位引脚,LCD显示屏复位引脚，低电平有效。"
            # "用于在初始化时复位LCD控制器，确保正常工作。"
        
        config LCD_SDA
            int "LCD SPI SDA(MOSI) pin"
            default 15
            range 0 48
            # "LCD SPI数据引脚,用于将显示数据和命令从ESP32-S3传输到LCD模块。"

        config LCD_SCL
            int "LCD SPI SCL(SCK) pin"
            default 16
            range 0 48
            # "LCD SPI时钟引脚,LCD的SPI时钟引脚，用于同步数据传输。"
        
        config LCD_CS
            int "LCD SPI CS pin"
            default 17
            range 0 48
            # "LCD SPI片选引脚,LCD的SPI片选引脚，低电平有效。"

        config LCD_DC
            int "LCD SPI DC pin"
            default 18
            range 0 48
            # "LCD SPI数据/命令选择引脚，LCD的数据/命令选择引脚。"
            # "高电平时，传输的数据被视为显示数据；"
            # "低电平时，传输的数据被视为控制命令。"

        config LCD_LEDK
            int "LCD backlight pin"
            default 21
            range 0 48
            # "LCD背光引脚(PWM控制),通过调节PWM占空比可以控制屏幕亮度。"
    endmenu
endmenu

menu "Other sensors"

    # IMU传感器配置 - LSM6DSOXTR
    # 6轴惯性测量单元(3轴加速度计+3轴陀螺仪)
    config SENSOR_PWR
        int "Sensor power pin"
        default 48
        range 0 48
        # "传感器供电引脚，为LSM6DSOXTR和LIS3MDLTR供电,"
        # "此引脚控制LSM6DSOXTR和LIS3MDLTR传感器的供电。"
        # "当不需要传感器时，可将此引脚置低以节省电量。"

    menu "IMU LSM6DSOXTR"
        config IMU_INT
            int "IMU interrupt pin"
            default 47
            range 0 48
            # "当有加速度/陀螺仪数据就绪或触发阈值事件时，此引脚会产生中断信号."
        
        config IMU_SDA
            int "IMU IIC SDA pin"
            default 41
            range 0 48
            # "LSM6DSOXTR的I2C数据线(SDA)。"
            # "与MAG_SDA共享同一I2C总线，但使用不同的I2C地址。"

        config IMU_SCL
            int "IMU IIC SCL pin"
            default 42
            range 0 48
    endmenu

    # 磁力计传感器配置 - LIS3MDLTR
    # 3轴磁力传感器，用于电子罗盘
    menu "Geomagnetic sensor LIS3MDLTR"
        config MAG_SDA
            int "Magnetometer IIC SDA pin"
            default 41
            range 0 48

        config MAG_SCL
            int "Magnetometer IIC SCL pin"
            default 42
            range 0 48
    endmenu 

    # INMP441数字麦克风模块
    # I2S接口的高性能数字麦克风
    menu "INMP441 Module microphone"
        # "INMP441数字麦克风模块引脚配置,使用I2S接口"
        config MIC_SCK
            int "Microphone SCK pin"
            default 40
            range 0 48

        config MIC_SD
            int "Microphone SD pin"
            default 39
            range 0 48

        config MIC_WS
            int "Microphone WS pin"
            default 38
            range 0 48

        config MIC_PWR
            int "INMP441 power pin"
            default 44
            range 0 48
            # "INMP441麦克风模块电源控制引脚。"
            # "高电平有效，用于控制麦克风模块的电源供应。"
            # "当不需要录音时，可将此引脚置低以节省电量。"
    endmenu
endmenu

